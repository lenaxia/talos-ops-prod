{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "vllm-local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "vLLM Local (via Traefik)",
      "options": {
        "baseURL": "{env:OPENAI_API_BASE}",
        "apiKey": "{env:OPENAI_API_KEY}"
      },
      "models": {
        "default": {
          "name": "{env:OPENAI_MODEL}",
          "id": "{env:OPENAI_MODEL}",
          "autocompact": {
            "enabled": true,
            "threshold": 150000
          }
        }
      }
    }
  },
  "permission": {
    "*": "allow",
    "bash": {
      "*": "deny",
      "git*": "allow",
      "gh*": "allow", 
      "mkdir*": "allow",
      "cat*": "allow",
      "ls*": "allow",
      "pwd": "allow",
      "jq*": "allow"
    },
    "external_directory": "deny",
    "doom_loop": "deny"
  }
}
