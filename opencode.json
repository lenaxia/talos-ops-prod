{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "vllm-local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "vLLM Local",
      "options": {
        "baseURL": "${{ secrets.OPENAI_API_BASE }}"
      },
      "models": {
        "${{ secrets.OPENAI_MODEL }}": {
          "name": "${{ secrets.OPENAI_MODEL }}"
        }
      }
    }
  }
}
